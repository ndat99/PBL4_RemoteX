<Window x:Class="RemoteX.Client.Views.RemoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RemoteX - Remote Control" Height="600" Width="900"
        MinHeight="300" MinWidth="450"
        Background="Black"
        Icon="/Views/Images/RemoteX.ico" Loaded="Window_Loaded" Closing="Window_Closing">
    <Window.Resources>
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="3,0"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5BA0F2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3A80D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DisconnectButtonStyle" TargetType="Button" BasedOn="{StaticResource ToolbarButtonStyle}">
            <Setter Property="Background" Value="#F44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F66356"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RemoteIdTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="SettingsToggleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderThickness" Value="0"/>

            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>

            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Width" Value="28"/>
            <Setter Property="Margin" Value="0,0,3,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Main Screen Area (Full Background) -->
        <Border Background="Black" ClipToBounds="True">
            <Image x:Name="imgRemoteScreen" 
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Focusable="True"
                   Source="{Binding ScreenView}">

                <Image.OpacityMask>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White"/>
                        <GradientStop Color="White" Offset="0.9"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </LinearGradientBrush>
                </Image.OpacityMask>
            </Image>
        </Border>

        <!-- Floating Toolbar (Top Center Overlay) -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top" 
                    Margin="0,5" 
                    Background="#252526" 
                    Opacity="0.95">
            <StackPanel.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.5"/>
            </StackPanel.Effect>

            <!-- Remote ID Display -->

            <!-- Action Buttons -->
            <Border Background="#F3F3F3" Padding="4,4">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="btnScreenshot" Content="⛶ Chụp màn hình" 
                            Style="{StaticResource ToolbarButtonStyle}"
                            FontSize="10" Padding="8,4"
                            Height="24" MinWidth="60"
                            Click="btnScreenshot_Click"/>
                    <Button x:Name="btnDisconnect" Content="⏻ Ngắt kết nối" 
                            Style="{StaticResource DisconnectButtonStyle}"
                            FontSize="10" Padding="8,4"
                            Height="24" MinWidth="60"
                            Click="btnDisconnect_Click"/>
                    <Button x:Name="btnSettings" Content="&#xE713;" 
                            Style="{StaticResource SettingsToggleButtonStyle}"
                            Click="btnSettings_Click">
                            <Button.ContextMenu>
                                <ContextMenu>
                                <MenuItem x:Name="menuItemThap" Header="Thấp"
                                          Click="Quality_Click_Thap" IsCheckable="True"/>
                                <MenuItem x:Name="menuItemTrungBinh" Header="Trung bình"
                                          Click="Quality_Click_TrungBinh" IsCheckable="True" IsChecked="True"/>
                                <MenuItem x:Name="menuItemCao" Header="Cao"
                                          Click="Quality_Click_Cao" IsCheckable="True"/>
                                </ContextMenu>
                            </Button.ContextMenu>
                    </Button>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>